<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_dialog_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/custom_dialog_background"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/custom_dialog_background">

        <TextView
                android:id="@+id/custom_dialog_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/custom_dialog_title_bar"
                android:textColor="@color/custom_dialog_title_foreground"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/custom_dialog_body_linearlayout"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/custom_dialog_body_linearlayout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

            <TextView
                    android:id="@+id/custom_dialog_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/custom_dialog_text_foreground"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/custom_dialog_button_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                >

            <Button
                    android:id="@+id/custom_dialog_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="120dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/custom_dialog_button_foreground"
                    android:background="@drawable/custom_dialog_button_background"
                    android:text="@string/custom_dialog_yes_button"/>

            <View android:id="@+id/custom_dialog_button_side_divider"
                  android:layout_width="5dp"
                  android:layout_height="match_parent"
                  android:background="#00000000"/>

            <Button
                    android:id="@+id/custom_dialog_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="120dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/custom_dialog_button_foreground"
                    android:background="@drawable/custom_dialog_button_background"
                    android:text="@string/custom_dialog_no_button"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

