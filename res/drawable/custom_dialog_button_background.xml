<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:shape="rectangle">

                    <gradient
                            android:angle="270"
                            android:startColor="#382710"
                            android:endColor="#382710"
                            android:type="linear"/>
                    <corners
                            android:radius="3dp"/>
                    <stroke
                            android:width="2dp"
                            android:color="#534533"/>

                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_checked="false" android:state_pressed="false">
        <layer-list>

            <item>
                <shape
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:shape="rectangle">

                    <gradient
                            android:angle="270"
                            android:startColor="#382710"
                            android:endColor="#1a1700"
                            android:type="linear"/>
                    <corners
                            android:radius="3dp"/>
                    <stroke
                            android:width="2dp"
                            android:color="#382710"/>

                </shape>
            </item>

        </layer-list>
    </item>

</selector>
